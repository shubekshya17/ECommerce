@model IEnumerable<ECommerce.Models.Category>
<h1> This is Category Index</h1>
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                   <thead>
                       <th>Name</th>
                       <th>Unit</th>
                       <th>Action</th>
                   </thead>
                   <tbody>
                        @foreach(Category x in Model)
                        {
                            <tr>
                                <td>@x.CategoryName</td>
                                <td>@x.CategoryUnit</td>
                                <td>
                                    <button type="button" class="btn btn-primary btn-sm">Edit</button>
                                    <button type="button" data-key="@x.Id" class="btn btn-danger btn-sm btnDelete">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
               <div class="row">
                   <div class="col-md-3">
                       Name
                   </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control formName"/>
                    </div>
               </div>
                <div class="row col mt-2">
                    <div class="col-md-3">
                        Code
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control formUnit"/>
                    </div>
                </div>
                <div class="row col mt-2">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-6">
                       <button type="button" class="btn btn-success btn-sm btnSave">Save</button>
                        <button type="button" class="btn btn-danger btn-sm btnCancel">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            toastr.success("Welcome");
        })
        $(document).on('click','.btnSave',function(){
            var name = $('.formName').val();
            var code = $('.formUnit').val();
            if (name == '') {
                toastr.error("Please Enter Name");
            } else if (code == '') {
                toastr.error("Please Enter Code");
            } else {
                $.ajax({
                    method:'get',
                    url:'@Url.Action("Save", "Category")?categoryName=' + name + '&categoryCode=' + code,
                    contentType: "application/json;charset=utf-8",
                    success: function (res) {
                        toastr.success(res.message);
                        clearForm();
                    }
                })
            }
        })
        $(document).on('click', '.btnCancel', function () {
            Swal.fire({
                title: "Are you sure want to reset?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Reset it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $('.formName').val('');
                    $('.formUnit').val('');
                }
            });
        })
        $(document).on('click', '.btnDelete', function () {
            var id = $(this).data('key');
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: 'get',
                        url: '@Url.Action("Delete", "Category")?id=' + id,
                        contentType: "application/json;charset=utf-8",
                        success: function (res) {
                            toastr.success(res.message);
                        }
                    })
                }
            });
        })
        function clearForm() {
            $('.formName').val('');
            $('.formUnit').val('');
        }
    </script>
}
